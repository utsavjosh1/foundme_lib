{
  "compilerOptions": {
    "target": "ES6",                              
    "module": "commonjs",  // or 'esnext', 'system', 'node16', 'nodenext', or 'preserve'
    "rootDir": "./src",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
